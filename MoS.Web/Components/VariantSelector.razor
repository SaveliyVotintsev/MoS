@if (Variants is { Count: > 0 })
{
    <MudSelect @bind-Value="SelectedVariant"
               HelperText="Укажите выданный вам вариант"
               Label="Вариант"
               Variant="Variant.Outlined">
        <MudSelectItem Value="@DefaultVariant">Ручной</MudSelectItem>
        @foreach (int key in Variants.Keys)
        {
            <MudSelectItem Value="@key.ToString()">Вариант @key</MudSelectItem>
        }
    </MudSelect>
}
else
{
    <MudText>Нет загруженных вариантов.</MudText>
}
